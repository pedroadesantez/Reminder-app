# Frontend Environment Variables (React Native / Expo)

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:7001/api
EXPO_PUBLIC_WEBSOCKET_URL=ws://localhost:7001

# Google OAuth Configuration
EXPO_PUBLIC_GOOGLE_CLIENT_ID_WEB=your-google-client-id-web.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_CLIENT_ID_IOS=your-google-client-id-ios.apps.googleusercontent.com
EXPO_PUBLIC_GOOGLE_CLIENT_ID_ANDROID=your-google-client-id-android.apps.googleusercontent.com

# Expo Configuration
EXPO_PROJECT_ID=your-expo-project-id
EXPO_ORGANIZATION=your-expo-organization

# Development Configuration
DEV_SERVER_HOST=localhost
DEV_SERVER_PORT=8081

# Feature Flags
ENABLE_VOICE_INPUT=true
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=true

# App Configuration
APP_NAME="Planner & Reminder"
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Theme Configuration
DEFAULT_THEME=light
ENABLE_DARK_MODE=true

# Debug Configuration
DEBUG_MODE=true
VERBOSE_LOGGING=false